<main>
  <h1>
    Thought Archive
  </h1>

  <p class="meta">
    <a href="{{about_url}}">
      <img src="https://s.gravatar.com/avatar/e7f62d126dec76b03e6d2393e44247ad?s=180"
           style="height: 3em; width: 3em;" />
    </a>

    <em>By <a href="{{about_url}}">Luke Morton</a></em>
  </p>

  <div class="thoughts">
    <ul>
      {{#thoughts}}
        <li class="post">
          <h2>
            <a href="{{href}}">{{title}}</a>
          </h2>

          <div class="post__published_at">
            <em>{{created}}</em>
          </div>

          <div class="content">
            {{{intro}}}
          </div>
        </li>
      {{/thoughts}}
    </ul>
  </div>

  ---

  <p>
    Feel free to go home now <a href="{{index_url}}">here</a>.
  </p>
</main>
