{
  "name": "lukemorton-co-uk",
  "version": "0.0.1",
  "repository": "https://bitbucket.org/drpheltright/lukemorton",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "7.0.0",
    "date-fns": "^1.22.0",
    "express": "^4.14.0",
    "markedly": "0.0.21",
    "morgan": "^1.7.0",
    "next": "2.0.0-beta.13",
    "react": "^15.6.1",
    "react-dom": "^15.4.1",
    "react-ga": "^2.1.2",
    "serve-favicon": "^2.3.2",
    "striptags": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "enzyme": "^2.6.0",
    "json": "^9.0.4",
    "nodemon": "^1.11.0",
    "now": "^11.3.9",
    "now-no-alias": "^1.0.3",
    "react-addons-test-utils": "^15.4.1",
    "standard": "8.4.0",
    "supertest": "^2.0.1"
  },
  "engines": {
    "node": "7.0.0"
  },
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "ava",
    "blog": "NODE_ENV=development nodemon --exec markedly --watch thoughts --ext md",
    "build": "NODE_ENV=production babel bin -d dist/bin && babel lib -d dist/lib && markedly && next build",
    "dev": "NODE_ENV=development nodemon bin/serve.js --exec babel-node --watch bin/serve.js --watch lib/createServer.js",
    "start": "NODE_ENV=production node dist/bin/serve.js",
    "deploy": "standard && ava -v && now --alias www.lukemorton.co.uk --alias lukemorton.co.uk",
    "clean-deploys": "now rm $(now-no-alias lukemorton-co-uk | json -a uid)"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015-node4",
      "stage-2",
      "react"
    ]
  },
  "markedly": {
    "dir": "thoughts",
    "lists": {
      "latestThoughts": {
        "limit": 10,
        "reverse": true
      },
      "thoughtsArchive": {
        "reverse": true
      }
    }
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
