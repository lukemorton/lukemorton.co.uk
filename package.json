{
  "name": "lukemorton-co-uk",
  "version": "0.0.2",
  "repository": "https://github.com/lukemorton/lukemorton.co.uk",
  "license": "UNLICENSED",
  "dependencies": {
    "@use-it/interval": "^0.1.3",
    "cross-fetch": "^3.0.4",
    "lodash.partial": "^4.2.1",
    "next": "^9.3.2",
    "nock": "^12.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-ga": "^2.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "babel-eslint": "10.0.3",
    "babel-jest": "^25.2.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "markedly": "^0.6.0",
    "next-offline": "^5.0.0",
    "nodemon": "^2.0.2",
    "now": "^16.7.0",
    "prettier": "^2.0.2"
  },
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "format": "prettier --write '{.github,page*,src,thoughts}/**/*.{js,css,md,yml}'",
    "test": "jest",
    "ci": "prettier --check '{.github,page*,src,thoughts}/**/*.{js,css,md,yml}' && jest",
    "blog": "NODE_ENV=development mkdir -p public/dist/content/articles && nodemon --exec markedly --watch content --ext md",
    "build:lib": "rm -rf lib && NODE_ENV=build:lib babel src -d lib",
    "build:blog": "mkdir -p public/dist/content/articles && markedly",
    "build:static": "NODE_ENV=production FACTORY=build next build",
    "build": "npm run build:lib && npm run build:blog && npm run build:static",
    "dev": "NODE_ENV=development next dev",
    "start": "NODE_ENV=production next start",
    "smoke": "npm run build:lib && ./lib/app/bin/smoke.js"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/setupTests.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,yml}": [
      "prettier --write"
    ]
  },
  "markedly": {
    "dir": "content/articles",
    "outDir": "public/dist",
    "lists": {
      "recent": {
        "limit": 10,
        "reverse": true
      },
      "archive": {
        "reverse": true
      },
      "topics/clean-architecture": {
        "reverse": true,
        "tags": [
          "Clean Architecture"
        ]
      },
      "topics/rails": {
        "reverse": true,
        "tags": [
          "Ruby on Rails"
        ]
      },
      "topics/trunk-based-development": {
        "reverse": true,
        "tags": [
          "Trunk-based development"
        ]
      },
      "topics/covid-19": {
        "reverse": true,
        "tags": [
          "COVID19"
        ]
      }
    }
  }
}
