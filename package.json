{
  "name": "lukemorton-co-uk",
  "version": "0.0.1",
  "repository": "https://bitbucket.org/drpheltright/lukemorton",
  "license": "ISC",
  "dependencies": {
    "next": "^9.1.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-ga": "^2.1.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-eslint": "10.0.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-15": "^1.1.1",
    "json": "^9.0.4",
    "markedly": "^0.3.0",
    "nodemon": "^2.0.2",
    "now": "^16.7.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^ 15.6.2",
    "standard": "8.4.0",
    "supertest": "^2.0.1"
  },
  "engines": {
    "node": ">=11.0.0"
  },
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "ava test/**/*.test.js",
    "blog": "NODE_ENV=development nodemon --exec markedly --watch thoughts --ext md",
    "build": "NODE_ENV=production markedly && next build",
    "dev": "NODE_ENV=development next dev",
    "start": "NODE_ENV=production next start"
  },
  "ava": {
    "require": [
      "babel-register",
      "./test/testHelper.js"
    ],
    "babel": "inherit"
  },
  "markedly": {
    "dir": "thoughts",
    "lists": {
      "latestThoughts": {
        "limit": 10,
        "reverse": true
      },
      "thoughtsArchive": {
        "reverse": true
      }
    }
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
