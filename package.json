{
  "name": "lukemorton-co-uk",
  "version": "0.0.1",
  "repository": "https://bitbucket.org/drpheltright/lukemorton",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^1.22.0",
    "express": "^4.16.4",
    "markedly": "^0.3.0",
    "morgan": "^1.9.1",
    "next": "^9.1.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-ga": "^2.1.2",
    "serve-favicon": "^2.5.0",
    "striptags": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "ava": "^0.25.0",
    "babel-eslint": "10.0.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-15": "^1.1.1",
    "json": "^9.0.4",
    "nodemon": "^2.0.2",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^ 15.6.2",
    "standard": "8.4.0",
    "supertest": "^2.0.1"
  },
  "engines": {
    "node": ">=11.0.0"
  },
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "ava test/**/*.test.js",
    "blog": "NODE_ENV=development nodemon --exec markedly --watch thoughts --ext md",
    "build": "NODE_ENV=production babel bin -d dist/bin && babel lib -d dist/lib && markedly && next build",
    "dev": "NODE_ENV=development nodemon bin/serve.js --exec babel-node --watch bin/serve.js --watch lib/createServer.js",
    "start": "NODE_ENV=production node dist/bin/serve.js"
  },
  "ava": {
    "require": [
      "babel-register",
      "./test/testHelper.js"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ],
      [
        "@babel/preset-react"
      ]
    ]
  },
  "markedly": {
    "dir": "thoughts",
    "lists": {
      "latestThoughts": {
        "limit": 10,
        "reverse": true
      },
      "thoughtsArchive": {
        "reverse": true
      }
    }
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
