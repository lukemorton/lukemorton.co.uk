{
  "name": "lukemorton-co-uk",
  "version": "0.0.1",
  "repository": "https://bitbucket.org/drpheltright/lukemorton",
  "license": "ISC",
  "dependencies": {
    "next": "^9.1.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-ga": "^2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "ava": "^2.4.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-15": "^1.1.1",
    "enzyme-adapter-react-16": "^1.15.1",
    "jest": "^24.9.0",
    "json": "^9.0.4",
    "markedly": "^0.3.0",
    "nodemon": "^2.0.2",
    "now": "^16.7.0",
    "standard": "8.4.0",
    "supertest": "^2.0.1"
  },
  "engines": {
    "node": ">=11.0.0"
  },
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "ava test/**/*.test.js",
    "blog": "NODE_ENV=development mkdir -p dist/thoughts && nodemon --exec markedly --watch thoughts --ext md",
    "build": "NODE_ENV=production mkdir -p dist/thoughts && markedly && next build",
    "dev": "NODE_ENV=development next dev",
    "start": "NODE_ENV=production next start"
  },
  "ava": {
    "require": [
      "./test/testHelper.js"
    ],
    "testOptions": {
      "presets": [
        "@babel/preset-react"
      ]
    }
  },
  "babel": {
    "presets": ["@babel/preset-env", "@babel/preset-react"]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/testHelper.js"
    ]
  },
  "markedly": {
    "dir": "thoughts",
    "lists": {
      "latestThoughts": {
        "limit": 10,
        "reverse": true
      },
      "thoughtsArchive": {
        "reverse": true
      }
    }
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
