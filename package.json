{
  "name": "lukemorton-co-uk",
  "version": "0.0.2",
  "repository": "https://bitbucket.org/drpheltright/lukemorton",
  "license": "ISC",
  "dependencies": {
    "@use-it/interval": "^0.1.3",
    "cross-fetch": "^3.0.4",
    "next": "^9.1.6",
    "nock": "^11.7.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-ga": "^2.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "babel-eslint": "10.0.3",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^24.9.0",
    "json": "^9.0.4",
    "markedly": "^0.5.0",
    "nodemon": "^2.0.2",
    "now": "^16.7.0",
    "standard": "^14.3.1"
  },
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "lint": "standard --fix",
    "test": "jest",
    "blog": "NODE_ENV=development mkdir -p public/dist/thoughts && nodemon --exec markedly --watch thoughts --ext md",
    "build": "NODE_ENV=production mkdir -p public/dist/thoughts && markedly && next build",
    "dev": "NODE_ENV=development next dev",
    "start": "NODE_ENV=production next start",
    "type": "module",
    "smoke": "babel-node bin/smoke.js"
  },
  "ava": {
    "require": [
      "./test/testHelper.js"
    ],
    "testOptions": {
      "presets": [
        "@babel/preset-react"
      ]
    }
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/testHelper.js"
    ]
  },
  "markedly": {
    "dir": "thoughts",
    "outDir": "public/dist",
    "lists": {
      "recent": {
        "limit": 10,
        "reverse": true
      },
      "archive": {
        "reverse": true
      },
      "topics/clean-architecture": {
        "reverse": true,
        "tags": [
          "Clean Architecture"
        ]
      },
      "topics/rails": {
        "reverse": true,
        "tags": [
          "Ruby on Rails"
        ]
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "jest"
    ],
    "globals": [
      "TEST_ORIGIN"
    ]
  }
}
