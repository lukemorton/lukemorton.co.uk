{
  "name": "lukemorton-co-uk",
  "version": "0.0.1",
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "7.0.0",
    "date-fns": "^1.22.0",
    "express": "^4.14.0",
    "fs-promise": "^1.0.0",
    "marked": "^0.3.6",
    "morgan": "^1.7.0",
    "next": "2.0.0-beta.13",
    "react-dom": "^15.4.1",
    "serve-favicon": "^2.3.2",
    "striptags": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "enzyme": "^2.6.0",
    "json": "^9.0.4",
    "nodemon": "^1.11.0",
    "now": "^0.39.1",
    "now-no-alias": "^1.0.3",
    "react-addons-test-utils": "^15.4.1",
    "standard": "8.4.0"
  },
  "engines": {
    "node": "7.0.0"
  },
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch server.js server.js",
    "start": "NODE_ENV=production node server.js",
    "test": "ava",
    "lint": "standard",
    "build": "next build && babel-node bin/build.js",
    "deploy": "standard && ava -v && now --alias www.lukemorton.co.uk --alias lukemorton.co.uk",
    "clean-deploys": "now rm $(now-no-alias lukemorton-co-uk | json -a uid)"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015-node4",
      "stage-2",
      "react"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "old/**"
    ]
  },
  "license": "ISC"
}
