{
  "name": "lukemorton-co-uk",
  "version": "0.0.2",
  "repository": "https://github.com/lukemorton/lukemorton.co.uk",
  "license": "UNLICENSED",
  "dependencies": {
    "cross-fetch": "^3.0.4",
    "feed": "^4.1.0",
    "lodash.partial": "^4.2.1",
    "next": "^9.3.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-ga": "^2.7.0",
    "sitemap": "^6.1.0",
    "swr": "^0.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "babel-eslint": "10.0.3",
    "babel-jest": "^25.2.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "markedly": "^0.7.0",
    "next-offline": "^5.0.0",
    "nodemon": "^2.0.2",
    "now": "^16.7.0",
    "prettier": "^2.0.2"
  },
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "format": "prettier --write '{.github,src}/**/*.{js,css,md,yml}'",
    "test": "jest",
    "ci": "prettier --check '{.github,src}/**/*.{js,css,md,yml}' && jest",
    "blog": "mkdir -p public/dist/src/content/articles && nodemon --exec markedly --watch src/content --ext md",
    "build:lib": "rm -rf lib && babel src -d lib/src && babel packages -d lib/packages",
    "build:blog": "mkdir -p public/dist/src/content/articles && markedly",
    "build:static": "next build",
    "build": "npm run build:lib && npm run build:blog && npm run build:static",
    "dev": "next dev",
    "start": "next start",
    "smoke": "npm run build:lib && ./lib/src/bin/smoke.js"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapper": {
      "content/articles/index.json$": "<rootDir>src/mocks/markedlyIndex.json.js",
      "content/articles/.+json$": "<rootDir>src/mocks/markedlyList.json.js"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,yml}": [
      "prettier --write"
    ]
  },
  "markedly": {
    "dir": "src/content/articles",
    "outDir": "public/dist",
    "lists": {
      "recent": {
        "limit": 10,
        "reverse": true
      },
      "archive": {
        "reverse": true
      },
      "topics/clean-architecture": {
        "reverse": true,
        "tags": [
          "Clean Architecture"
        ]
      },
      "topics/rails": {
        "reverse": true,
        "tags": [
          "Ruby on Rails"
        ]
      },
      "topics/trunk-based-development": {
        "reverse": true,
        "tags": [
          "Trunk-based development"
        ]
      },
      "topics/covid-19": {
        "reverse": true,
        "tags": [
          "COVID19"
        ]
      }
    }
  }
}
